<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/static/css/checkout.css" />

    <title>Checkout</title>
    <link rel="icon" href="/static/img/logo.jpg" type="image/x-icon" />
  </head>

  <body>
    <header class="home-header">
      <div class="left-header">
        <div class="stores-contact">
          <a href="http://localhost:3000/home/cart"
            ><img src="/static/img/H1.png"
          /></a>
        </div>
        <div class="head-logo">
          <a href="http://localhost:3000/home"
            ><img
              src="	https://prodstatic.shoppersstop.com/_ui/responsive/common/assets/images/sslogo.svg"
          /></a>
        </div>
      </div>
      <div class="right-header">
        <img src="/static/img/H3.png" />
      </div>
    </header>
    <!-- Header close -->
    <br /><br /><br />
    <br /><br />
    <br />

    <main>
      <div id="checkoutt">
        <div class="child">
          <h3 style="margin-left: 20px; float: left">1.SINING IN</h3>
          <h4 style="margin-left: 20px; float: left">sima.com</h4>

          <button id="change1" style="color: #ff5d3b"><B>CHANGE</B></button>
        </div>

        <div class="child2">
          <div class="delivery">
            <h2 style="margin-left: 20px">1.delivery info</h2>
          </div>
          <div class="address">
            <div id="aa" onclick="a()">DELIVERY ADDRESS</div>
            <div id="bb" onclick="b()">EXPRESS STOR PICK UP</div>
          </div>

          <div id="a1">
            <h3 style="margin-left: 20px">Add New Address</h3>
            <div style="margin-top: 20px">
              <div style="display: flex; margin-left: 20px">
                <input placeholder="First name" class="fsname" />
                <input placeholder="Second name" class="fsname" />
              </div>
              <div class="div1">
                <input placeholder="-91" class="code" />
                <input placeholder="Number" class="num" />
              </div>
              <input placeholder="Pin Code" class="pincode" />
              <div class="cs">
                <input placeholder="city" class="city" />
                <input placeholder="state" class="city" />
              </div>
              <div class="div2">
                <input placeholder="Address Line 1" class="Addresses" />
                <input
                  placeholder="Address Line 2 (optional)"
                  class="Addresses"
                />
              </div>
            </div>
          </div>

          <div id="a2">
            <div
              style="
                border-bottom: 1px solid rgb(138, 138, 138);
                border-top: 1px solid rgb(138, 138, 138);
                width: 600px;
                margin-left: 20px;
              "
            >
              <h4>PICK UP</h4>

              <div style="display: flex">
                <input type="checkbox" style="margin-right: 20px" /><label
                  style="margin-right: 20px"
                  >self</label
                ><input style="margin-right: 20px" type="checkbox" /><label
                  >someone else</label
                >
              </div>
            </div>

            <h3 style="margin-left: 20px">Add New Address</h3>
            <div style="margin-top: 20px">
              <div style="display: flex; margin-left: 20px">
                <input placeholder="First name" class="fsname" />
                <input placeholder="Second name" class="fsname" />
              </div>
              <div class="div1">
                <input placeholder="-91" class="code" />
                <input placeholder="Number" class="num" />
              </div>
              <input placeholder="Pin Code" class="pincode" />
              <div class="cs">
                <input placeholder="city" class="city" />
                <input placeholder="state" class="city" />
              </div>
              <div class="div2">
                <input placeholder="Address Line 1" class="Addresses" />
                <input
                  placeholder="Address Line (optional)"
                  class="Addresses"
                />
              </div>
            </div>
          </div>
          <div
            style="
              border: 1px solid black;
              width: 100%;
              height: 100px;
              background-color: blueviolet;
            "
          ></div>
        </div>
      </div>

      <aside>
        <div class="summary">
          <div class="summary-total-items">ORDER SUMMERY</div>
          <br />
          <div class="summary-subtotal">
            <div class="subtotal-title">Subtotal</div>
            <div class="subtotal-value final-value" id="basket-subtotal">
              4194
            </div>
            <div class="subtotal-title">Gift Packaging</div>
            <div class="subtotal-value final-value" id="">Free</div>
            <div class="summary-subtotal">
              <div class="subtotal-title">Delivery Charges</div>
              <div class="subtotal-value final-value" id="basket-subtotal">
                100
              </div>

              <div class="summary-total">
                <div class="total-title">Total</div>
                <div class="total-value final-value" id="basket-total">
                  4294
                </div>
              </div>
            </div>
            <div>
              <p style="color: gray; font-size: 10">
                No Delivery charges for Express Store Pickup.
              </p>
              <br />
              <p style="color: gray; font-size: 10">
                Do you have a gift card or and electronic gift voucher? Use it
                at the payment page.
              </p>
            </div>
            <br />
            <br />
          </div>
        </div>
      </aside>
    </main>
  </body>
</html>

<script>
  function appendTotal() {
    let total = JSON.parse(localStorage.getItem("basket-total"));
    let basket_total = document.getElementById("basket-total");
    basket_total.innerText = "₹ " + total;

    let subtotal = JSON.parse(localStorage.getItem("basket-subtotal"));
    let basket_subtotal = document.getElementById("basket-subtotal");
    basket_subtotal.innerText = "₹ " + subtotal;
  }
  appendTotal();

  function openWin() {
    window.open("http://localhost:3000/home/thanks");
  }

  function a() {
    var aa = document.getElementById("aa");
    var bb = document.getElementById("bb");

    var a1 = document.getElementById("a1");
    var a2 = document.getElementById("a2");

    a1.style.visibility = "visible";

    a2.style.visibility = "hidden";
  }
  function b() {
    var a1 = document.getElementById("a1");
    var a2 = document.getElementById("a2");

    a2.style.visibility = "visible";
    a1.style.visibility = "hidden";
  }
</script>
